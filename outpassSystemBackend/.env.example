### Copy this file to `.env` and fill in real values. Do NOT commit your real `.env` to source control.

# MongoDB connection string
MONGO_URI=mongodb://localhost:27017/nith-outpass

# JWT secret used to sign auth tokens - set a long, random value in production
JWT_SECRET=replace_with_a_secure_random_value

# SMTP / email settings (used for OTP and password reset)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false # true if using TLS over 465
EMAIL_USER=your-email@example.com
EMAIL_PASS=your-email-password

# Frontend URL allowed for CORS and reset links
FRONTEND_URL=http://localhost:5173

# Enable to return OTP/reset links in responses for local testing. MUST be false in production.
DEV_EMAIL_FALLBACK=false

# Server port
PORT=5000

# Optional: Sentry DSN for error tracking (leave empty to disable)
SENTRY_DSN=

# Logging level (error, warn, info, verbose, debug, silly)
LOG_LEVEL=info
